{% extends "base.html.twig" %}

{% block metatitle %}
    Liste des articles | CR7
{% endblock metatitle %}


{% block main %}

    {% for article in articles %}
        <h1>{{ article.title }}</h1> <!-- je mets mon titre d'article -->
        <p>{{ article.content }}</p>
        <div class="container">
            <img src="{{ article.image }}" alt="">
        </div>
        <a href="{{ path("article_show", {id: article.id}) }}">voir en entier</a> <!-- lien qui m'amÃ¨ne sur l'article id en question et affichera dans l'url /Xid -->
    {% endfor %}

{% endblock main %}


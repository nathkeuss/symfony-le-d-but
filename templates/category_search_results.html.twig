{% extends "base.html.twig" %}

{% block metatitle %}
    Résultats de recherche catégorie | CR7
{% endblock metatitle %}

{% block main %}

    <h2>Voici le résultat de la recherche "{{ search }}"</h2>

    {% for category in categories %} <!-- boucle sur chaque article de la variable articles, sur title, content, et image -->
        <section style="background-color: {{ category.color }};">
            <h1>{{ category.title }}</h1> <!-- je mets mon titre d'article -->
        </section>
    {% endfor %}

{% endblock main %}